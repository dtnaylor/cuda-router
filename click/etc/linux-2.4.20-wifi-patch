+struct prism2_wep_data {
+	u32 iv;
+#define WEP_KEYS 4
+#define WEP_KEY_LEN 13
+	u8 keys[WEP_KEYS][WEP_KEY_LEN + 1];
+	u8 key_lens[WEP_KEYS];
+	int tx_key;
+};
+
+static const __u32 crc32_table[256] = {
